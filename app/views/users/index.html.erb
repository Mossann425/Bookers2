<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">


        <table class="table table-striped">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @users.each do |user| %>
            <td>
                <%=image_tag user.get_profile_image(50, 50) %>
            </td>
            <td>
                  <%= user.name %>
            </td>
            <td>
                <%= link_to "Show", user_path(user.id) , class: 'nav-link ' %>
            </td>
            </tr>
            <% end %>

          </tbody>
        </table>

    </div>
  </div>
</div>
