<div class="d-flex align-items-center justify-content-center">
  <% if @user.errors.any? %>
 <strong> <%= @user.errors.count %>error prohibited this obj from being saved:</strong>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
      </ul>
<% end %>
<%= form_with model: @user do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>
 <h4>Image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>  <!-- 追加部分 -->
  <%= f.submit 'Update User' ,class: "btn btn-secondary" %>

<% end %>
</div>